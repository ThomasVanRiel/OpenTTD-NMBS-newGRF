/*
* PURCHASE
*/

spriteset(spriteset_coach_NMBS_I10_purchase, "gfx/Coaches/NMBS_I10.png") {
	template_purchase(1, 128)
}

/*
* Vehicle
*/

//Livery 1 - PAX
spriteset(spriteset_coach_NMBS_I10_PASS_L1, "gfx/Coaches/NMBS_I10.png") {
	template_2cc_wagons(1, 1)
}

//Livery 2 - PAX
spriteset(spriteset_coach_NMBS_I10_PASS_L2, "gfx/Coaches/NMBS_I10.png") {
	template_2cc_wagons(179, 1)
}

//Livery 3 - PAX
spriteset(spriteset_coach_NMBS_I10_PASS_L3, "gfx/Coaches/NMBS_I10.png") {
	template_2cc_wagons(357, 1)
}

//Livery 4 - PAX
spriteset(spriteset_coach_NMBS_I10_PASS_L4, "gfx/Coaches/NMBS_I10.png") {
	template_2cc_wagons(535, 1)
}

//SWITCH - PAX
switch(FEAT_TRAINS, SELF, switch_coach_NMBS_I10_PASS_livery, cargo_subtype) {
	0: spriteset_coach_NMBS_I10_PASS_L1;
	1: spriteset_coach_NMBS_I10_PASS_L2;
	2: spriteset_coach_NMBS_I10_PASS_L3;
	spriteset_coach_NMBS_I10_PASS_L4;
}

//Livery 1 - MAIL
spriteset(spriteset_coach_NMBS_I10_MAIL_L1, "gfx/Coaches/NMBS_I10.png") {
	template_2cc_wagons(1, 32)
}

//Livery 2 - MAIL
spriteset(spriteset_coach_NMBS_I10_MAIL_L2, "gfx/Coaches/NMBS_I10.png") {
	template_2cc_wagons(179, 32)
}

//Livery 3 - MAIL
spriteset(spriteset_coach_NMBS_I10_MAIL_L3, "gfx/Coaches/NMBS_I10.png") {
	template_2cc_wagons(357, 32)
}

//Livery 4 - MAIL
spriteset(spriteset_coach_NMBS_I10_MAIL_L4, "gfx/Coaches/NMBS_I10.png") {
	template_2cc_wagons(535, 32)
}

//SWITCH - MAIL
switch(FEAT_TRAINS, SELF, switch_coach_NMBS_I10_MAIL_livery, cargo_subtype) {
	0: spriteset_coach_NMBS_I10_MAIL_L1;
	1: spriteset_coach_NMBS_I10_MAIL_L2;
	2: spriteset_coach_NMBS_I10_MAIL_L3;
	spriteset_coach_NMBS_I10_MAIL_L4;
}

switch(FEAT_TRAINS, SELF, switch_coach_NMBS_I10_cargo_selection, cargo_classes){
	bitmask(CC_PASSENGERS): switch_coach_NMBS_I10_PASS_livery;
	switch_coach_NMBS_I10_MAIL_livery;
}

//cargo subtype
switch(FEAT_TRAINS, SELF, switch_coach_NMBS_I10_cargo_subtype_text, cargo_subtype) {
    0: return string(str_text_coach_NMBS_I10_livery_standard);
    1: return string(str_text_coach_NMBS_I10_livery_diner);
    2: return string(str_text_coach_NMBS_I10_livery_panorama);
    3: return string(str_text_coach_NMBS_I10_livery_sleeper);
    return CB_RESULT_NO_TEXT;
}

